{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@weblancer-ui/client-core": ["libs/client-core/src/index.ts"],
      "@weblancer-ui/custom-manager": ["libs/custom-manager/src/index.ts"],
      "@weblancer-ui/editor-connector": ["libs/editor-connector/src/index.ts"],
      "@weblancer-ui/editor-core": ["libs/editor-core/src/index.ts"],
      "@weblancer-ui/manager-registry": ["libs/manager-registry/src/index.ts"],
      "@weblancer-ui/state-manager": ["libs/state-manager/src/index.ts"],
      "@weblancer-ui/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
