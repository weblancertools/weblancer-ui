{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@weblancer-ui/adjustment-manager": [
        "libs/adjustment-manager/src/index.ts"
      ],
      "@weblancer-ui/breakpoint-manager": [
        "libs/breakpoint-manager/src/index.ts"
      ],
      "@weblancer-ui/client-core": ["libs/client-core/src/index.ts"],
      "@weblancer-ui/component-manager": [
        "libs/component-manager/src/index.ts"
      ],
      "@weblancer-ui/custom-manager": ["libs/custom-manager/src/index.ts"],
      "@weblancer-ui/editor-core": ["libs/editor-core/src/index.ts"],
      "@weblancer-ui/editor-core-ui": ["libs/editor-core-ui/src/index.ts"],
      "@weblancer-ui/inspector-manager": [
        "libs/inspector-manager/src/index.ts"
      ],
      "@weblancer-ui/layout-manager": ["libs/layout-manager/src/index.ts"],
      "@weblancer-ui/manager-registry": ["libs/manager-registry/src/index.ts"],
      "@weblancer-ui/prop-manager": ["libs/prop-manager/src/index.ts"],
      "@weblancer-ui/state-manager": ["libs/state-manager/src/index.ts"],
      "@weblancer-ui/store-manager": ["libs/store-manager/src/index.ts"],
      "@weblancer-ui/types": ["libs/types/src/index.ts"],
      "@weblancer-ui/undo-manager": ["libs/undo-manager/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
